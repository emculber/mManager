<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cash"
        android:id="@+id/listview_transaction_item_textview_type"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/textview_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/listview_transaction_item_textview_date"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_transaction_item_textview_type"
        android:layout_toEndOf="@+id/listview_transaction_item_textview_type"
        android:layout_margin="@dimen/textview_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/listview_transaction_item_textview_amount"
        android:layout_below="@+id/listview_transaction_item_textview_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/textview_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wallet"
        android:id="@+id/listview_transaction_item_textview_wallet"
        android:layout_below="@+id/listview_transaction_item_textview_date"
        android:layout_toRightOf="@+id/listview_transaction_item_textview_amount"
        android:layout_toEndOf="@+id/listview_transaction_item_textview_amount"
        android:layout_margin="@dimen/textview_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="note"
        android:id="@+id/listview_transaction_item_textview_note"
        android:layout_below="@+id/listview_transaction_item_textview_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/textview_margin" />
</RelativeLayout>